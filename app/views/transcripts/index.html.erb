<p id="notice"><%= notice %></p>

<h1>Transcripts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Filename</th>
      <th>File</th>
      <th>Content type</th>
      <th>Description</th>
      <th>Tag</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transcripts.each do |transcript| %>
      <tr>
        <td><%= transcript.title %></td>
        <td><%= transcript.filename %></td>
        <td><%= transcript.file %></td>
        <td><%= transcript.content_type %></td>
        <td><%= transcript.description %></td>
        <td><%= transcript.tag %></td>
        <td><%= transcript.user_id %></td>
        <td><%= link_to 'Show', transcript %></td>
        <td><%= link_to 'Edit', edit_transcript_path(transcript) %></td>
        <td><%= link_to 'Destroy', transcript, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

